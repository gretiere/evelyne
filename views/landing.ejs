<% include partials/header %>

    <div class="promo-header " id="heading-banner">

        <div class="my-container container pt25-sm-down">
            
            <% articles.forEach(function(article) { %>
                <section id ="section1">
                    <h1 style="color:<%= article.couleurTheme %>;"><%= article.nom %></h1>
                    <!-- <div class="star" style="color:#37474f;"><i class="fa fa-star" aria-hidden="true"></i></div> -->
                    <h2 style="color:#546e7a;"><%= article.nomSecondaire %></h2>   
                    <div class="star" style="color:#37474f;"><i class="fa fa-star" aria-hidden="true"></i></div>                     
                    <p><%= article.description %></p>
                    <div class="wrapper">
                        <img class="" src='<%= article.image %>'/>
                        <div class="description">
                            <p class="description-content">
                                <%= article.nom %>&nbsp;<%= article.prix %>&nbsp;&euro;
                            </p>
                        </div>
                    </div> 
                    <p><%= article.descriptionTechnique %></p>
                    <div class="produkt">
                        <div class="produkt-add">
                            <button class="btn btn-voir-plus float-right">
                                <a href="/articles/<%= article.id %>">Voir plus</a>
                            </button>                            
                            <button class="btn btn-voir-plus float-right">
                                <a href="/add-to-cart/<%= article.id %>">Acheter</a>
                            </button>
                        </div>                
                    </div>     
                    <hr>
                </section>
            
            <% }); %>

        </div>
    </div>

<script>
    $('#heading-banner').css('display', 'block');
</script>

<% include partials/footer %>