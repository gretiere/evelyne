<% include ../partials/header %>

    <div class="row">
        <h1 style="text-align: center">Edit <%= article.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/articles/<%= article._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="article[name]" value="<%= article.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="article[image]" value="<%= article.image %>">
                </div>
                <div class="form-group">
                  <input class="form-control" type="number" name="article[cost]" value="<%= article.cost %>" step="0.1" min="0" required>
                </div>                
                <div class="form-group">
                    <input class="form-control" type="text" name="article[description]" value="<%= article.description %>">
                </div>
                <div class="form-group">
                    <label for="image">Photos</label>
                    <input type="file" id="photo" name="photo" accept="image/*" multiple>
                </div>                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/articles">Go Back</a>
        </div>
    </div>

<% include ../partials/footer %>

