<% include ../partials/header %>
<div class="row display-flex" style="display:flex; flex-wrap: wrap;">
	<div class="col-md-12">
	    <div class="table-responsive">
	        <table id="mytable" class="table table-bordred table-striped">
	            <thead>
	                <th><input type="checkbox" id="checkall" /></th>
	                <th>&nbsp;</th>
	                <th>Article Id</th>
	                <th>Description</th>
	                <th>Price</th>
	                <th>Quantity</th>
	                <th>Total Price</th>
	                <th>Edit</th>
	                <th>Delete</th>
	            </thead>
                <tbody>
                    <% articles.forEach(function(article){ %>
                    <div class="thumbnail">
                    <tr>
                        <td><input type="checkbox" class="checkthis" /></td>
                        <td><div style="width:20%;"><img src="<%= article.item.image %>" class="img img-responsive full-width media-photo"></div></td>
                        <td><%= article.item._id %></td>
                        <td><%= article.item.nom %></td>
                        <td><%= article.item.prix %></td>
                        <td><%= article.qty %></td>
                        <td><%= article.prix %></td>
                        <td><p data-placement="top" data-toggle="tooltip" title="Edit"><button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit" ><span class="glyphicon glyphicon-pencil"></span></button></p></td>
                        <td><p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete" ><span class="glyphicon glyphicon-trash"></span></button></p></td>
                    </tr>
                    </div>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>	   
    <div class="container">
        <a href="/cart/checkout" id="checkout" class="btn btn-default pull-right">Checkout</a>      
    </div>

</div>

    <script>
        $('#heading-banner').css('display', 'none');
    </script>
    
<% include ../partials/footer %>

